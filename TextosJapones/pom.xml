        <dependency>
            <groupId>kuromoji.ipadic</groupId>
            <artifactId>kuromoji</artifactId>
            <version>0.9.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/src/lib/kuromoji-ipadic-0.9.0.jar</systemPath>
