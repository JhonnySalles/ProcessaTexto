        <!-- Sudachi - Japones dictionary -->
        <dependency>
            <groupId>com.worksap.nlp</groupId>
            <artifactId>sudachi</artifactId>
            <version>0.6.1</version>
        </dependency>

        <!-- JSoup, parse html para document -->
        <dependency>
            <groupId>org.jsoup</groupId>
