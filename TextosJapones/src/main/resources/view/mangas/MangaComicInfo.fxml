                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icoPasta_48.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="btnArquivo" contentDisplay="GRAPHIC_ONLY" onAction="#onBtnCarregarArquivo" prefWidth="35.0">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icoArquivo_48.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
      	          <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
      	             <opaqueInsets>
      	                <Insets />
      	             </opaqueInsets>
      	             <children>
      	                <JFXButton fx:id="btnProcessar" accessibleText="PROCESSAR" buttonType="RAISED" defaultButton="true" onAction="#onBtnProcessar" prefWidth="140.0" styleClass="background-White1" text="Processar" HBox.hgrow="ALWAYS" />
      	             </children>
      	          </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <JFXButton fx:id="btnProcessarMarcados" accessibleText="PROCESSAR" buttonType="RAISED" onAction="#onBtnProcessarMarcados" prefWidth="140.0" styleClass="background-White1" text="Processar Marcados" HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="btnLimparLista" accessibleText="PROCESSAR" buttonType="RAISED" onAction="#onBtnLimparLista" prefWidth="140.0" styleClass="background-White1" text="Limpar lista" />
               </children>
            </HBox>
            <TreeTableView fx:id="treeTabela" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TreeTableColumn fx:id="treecFlag" prefWidth="75.0" />
                <TreeTableColumn fx:id="treecMacado" prefWidth="27.5" />
                  <TreeTableColumn fx:id="treecManga" editable="false" prefWidth="263.5" text="Manga" />
                  <TreeTableColumn fx:id="treecNome" editable="false" prefWidth="150.0" text="Nome" />
                  <TreeTableColumn fx:id="treecMalID" editable="false" minWidth="0.0" prefWidth="64.5" text="ID" />
                  <TreeTableColumn fx:id="treecSite" editable="false" prefWidth="76.5" text="Site" />
                  <TreeTableColumn fx:id="treecProcessar" editable="false" prefWidth="76.5" text="Processar" />
                  <TreeTableColumn fx:id="treecImagem" editable="false" prefWidth="200.0" text="Imagem" />
              </columns>
            </TreeTableView>
	       </children>
	    </VBox>                      
   </children>
   <styleClass>
      <String fx:value="background-Black2" />
      <String fx:value="paneBorder" />
   </styleClass>
