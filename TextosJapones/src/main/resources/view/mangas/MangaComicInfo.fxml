<AnchorPane fx:id="apRoot" prefHeight="500.0" prefWidth="800.0" stylesheets="@../../css/Dark_Theme.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jisho.textosJapones.controller.mangas.MangasComicInfoController">
   <children>          
	    <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="500.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="15.0">
	       <children>
            <VBox spacing="10.0">
               <children>
      	          <HBox spacing="10.0">
      	             <children>
                        <JFXComboBox fx:id="cbLinguagem" focusColor="#71afe5" labelFloat="true" prefWidth="200.0" promptText="Linguagem" styleClass="comboBox-stilo" unFocusColor="#106ebe" />
      	             </children>
      	             <padding>
      	                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      	             </padding>
      	             <opaqueInsets>
      	                <Insets />
      	             </opaqueInsets>
      	          </HBox>
                  <HBox maxWidth="600.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <JFXTextField fx:id="txtCaminho" focusColor="#71afe5" labelFloat="true" maxWidth="1.7976931348623157E308" prefHeight="25.0" promptText="Caminho salvar" styleClass="texto-stilo" unFocusColor="#106ebe" HBox.hgrow="ALWAYS" />
